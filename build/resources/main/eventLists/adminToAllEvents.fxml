<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.app.events.lists.controllers.AdminToAllEvents"
            prefHeight="400.0" prefWidth="600.0" >

    <top>
        <VBox>
            <Label fx:id="eventNameLbl" text="event name here"/>
        </VBox>
    </top>

    <left>
        <Button text="Previous" onAction="#changeToPrevious" fx:id="previousBtn"/>
    </left>

    <right>
        <Button text="Next" onAction="#changeToNext" fx:id="nextBtn"/>
    </right>

    <center>
        <VBox alignment="center">
            <Label fx:id="dateLbl" text="date here"/>
            <Text fx:id="descriptionTxt" text="description here"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="center" spacing="10">
            <Button fx:id="backBtn" onAction="#changeToMainPage" text="Back"/>
            <Button text="Modify"/>
            <Button text="Delete" onAction="#deleteEvent"/>
        </HBox>
    </bottom>

</BorderPane>
